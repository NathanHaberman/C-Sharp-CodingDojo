<div class="container p-3">
    <div class="row">
        <div class="col-8">
            <h2>@TempData["Name"]</h2>
            <p class="ml-5">at @ViewBag.Wedding.Address</p>
        </div>
        <div class="col-4">
            <a href="/Home"><button class="d-inline btn btn-outline-primary">Dashboard</button></a>
            <form class="d-inline ml-2" asp-controller="User" asp-action="Logout" method="post">
                <button class="btn btn-outline-danger">Logout</button>
            </form>
        </div>
    </div>

    <p>Guests:</p>
    @if (@ViewBag.Wedding.Guests.Count == 0)
    {
        <p>No guests yet</p>
    }
    @foreach (var guest in @ViewBag.Wedding.Guests)
    {
        <p class="ml-3">@guest.User.FirstName @guest.User.LastName</p>
    }
</div>