@model TheDojoLeague.Models.Ninja

<div class="container p-3">
    <h2>New Ninja</h2>
    <form class="col-4" asp-controller="Home" asp-action="CreateNinja" method="post">
        <label asp-for="Name"></label>&nbsp;&nbsp;
        <small class="text-danger"><span asp-validation-for="Name"></span></small>
        <input asp-for="Name" class="form-control" placeholder="Name">

        <label class="mt-2" asp-for="Level"></label>&nbsp;&nbsp;
        <small class="text-danger"><span asp-validation-for="Level"></span></small>
        <select asp-for="Level" class="form-control">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
            <option>6</option>
            <option>7</option>
            <option>8</option>
            <option>9</option>
            <option>10</option>
        </select>

        <button class="mt-3 btn btn-success">Add Ninja</button>
    </form>
</div>