@model Login_and_Reg.Models.User

<div asp-validation-summary="All"></div>

<div class="row p-3">
    <div class="col">
        <h2>Login</h2>
        <form asp-action="Login" method="post">
            <label>Email</label>
            <input name="email" type="text">
            @TempData["EmailError"]
            <br>

            <label>Password</label>
            <input name="password" type="password">
            @TempData["PasswordError"]
            <br>

            <button class="btn btn-success">Login</button>
        </form>
        
    </div>
    <div class="col">
        <h2>Register</h2>
        <form asp-controller="Users" asp-action="Register" method="post">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-controller"><br>
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-controller"><br>
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-controller"><br>
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-controller"><br>
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-controller"><br>

            <button class="btn btn-success">Register</button>
        </form>
        @{
            if (ViewBag.ErrorMessages != null){
                foreach (string error in ViewBag.ErrorMessages){
                    <p>@error</p>
                }
            }
        }
    </div>
</div>