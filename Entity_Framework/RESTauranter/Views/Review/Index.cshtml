@model RESTauranter.Models.Review

<div class="row p-3">
    <h1>Write a New Review!</h1>
</div>
<div class="row p-3">
    <div class="col">
        <form asp-controller="Review" asp-action="NewReview" method="post">
            <div class="row">
                <div class="col">

                    <label>Your Name</label><br>
                    <input class="form-control" asp-for="reviewer" placeholder="Name">
                    <span class="text-danger" asp-validation-for="reviewer"></span>

                </div>
                <div class="col">

                    <label>Restaurant Name</label><br>
                    <input class="form-control" asp-for="name" placeholder="Resturant">
                    <span class="text-danger" asp-validation-for="name"></span>

                </div>
            </div>

            <label class="mt-3">Review</label><br>
            <textarea class="form-control" asp-for="theMeat" rows="5" placeholder="Review"></textarea>
            <span class="text-danger" asp-validation-for="theMeat"></span>

            <div class="row">
                <div class="col">

                    <label class="mt-3">Visit Date</label><br>
                    <input class="form-control" type="date" asp-for="visitDate">
                    <span class="text-danger" asp-validation-for="visitDate"></span>
                    <span class="text-danter">@TempData["DateError"]</span>

                </div>
                <div class="col">

                    <label class="mt-3">Star Rating</label><br>
                    <select class="form-control" asp-for="stars">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                    <span class="text-danger" asp-validation-for="stars"></span>

                </div>
            </div>

            <button class="mt-3 btn btn-block btn-success">Submit</button>
        </form>

    </div>
</div>